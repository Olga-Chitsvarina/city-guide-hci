            <ed:RegularPolygon Fill="#FFFFCA00" InnerRadius="0.55" PointCount="5" Stretch="Fill" Stroke="Black" StrokeThickness="2" Width="38.26" Height="34.867" VerticalAlignment="Top" Margin="2,0"/>
